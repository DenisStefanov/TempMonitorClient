<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_display_name"
        android:inputType="textUri"
        android:key="ServerIP"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_name" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_user"
        android:inputType="text"
        android:key="user"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_default_user_title" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_passwd"
        android:inputType="textVisiblePassword"
        android:key="passwd"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_default_passwd_title" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_startSrvCmd"
        android:inputType="textVisiblePassword"
        android:key="startSrvCmd"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_startSrvTitle" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_stopSrvCmd"
        android:inputType="textVisiblePassword"
        android:key="stopSrvCmd"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_stopSrvTitle" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_configSrv"
        android:inputType="textVisiblePassword"
        android:key="getLogCmd"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_configSrvTitle" />
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_RegIDSrvFile"
        android:inputType="textVisiblePassword"
        android:key="RegIDSrvFile"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_RegIDSrvFileTitle" />


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_friends_to_messages" />

</PreferenceScreen>
