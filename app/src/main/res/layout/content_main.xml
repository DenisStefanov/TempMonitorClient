<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:keepScreenOn="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.duckdns.denis_st.tempmonitorclient.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/lastupdate" />
    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempStillVal"
        android:maxLength="5"
        android:width="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp" />
    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="30dp"
        android:maxLength="5"
        android:width="60dp"
        android:id="@+id/tempTowerVal" />

    <ToggleButton
        android:text="Fix temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:id="@+id/ToggleStillBtn" />

    <ToggleButton
        android:text="Fix temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="0dp"
        android:id="@+id/ToggleTowerBtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="0.0"
        android:ems="10"
        android:maxLength="5"
        android:width="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:id="@+id/editStillTempFix" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="0.0"
        android:ems="10"
        android:maxLength="5"
        android:width="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="40dp"
        android:id="@+id/editTowerTempFix" />

    <CheckBox
        android:id="@+id/checkBoxAutoStill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editStillTempFix"
        android:layout_below="@+id/editStillTempFix"
        android:text="Auto" />

    <CheckBox
        android:id="@+id/checkBoxAutoTower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTowerTempFix"
        android:layout_below="@+id/editTowerTempFix"
        android:text="Auto" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@id/tempTowerVal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:max="120"
        android:rotation="270" />


    <TextView
        android:id="@+id/dimmerTextVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tempCoolerVal"
        android:layout_marginBottom="60dp"
        android:width="150dp"
        android:text="" />

    <TextView
        android:id="@+id/pressureTextVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dimmerTextVal"
        android:layout_marginBottom="90dp"
        android:width="150dp"
        android:text="" />
    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="30dp"
        android:width="150dp"
        android:id="@+id/tempCoolerVal" />

    <Button
        android:id="@+id/buttonDimUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:text="+" />

    <Button
        android:id="@+id/buttonDimDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:text="-" />

</RelativeLayout>
